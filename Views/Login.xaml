<Page x:Class="ToDoApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoApp"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="Login">

    <Grid Height="450" Width="450">
        <TextBox x:Name="UsernameLoginTextBox" HorizontalAlignment="Left" Height="23" Margin="165,176,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120" UndoLimit="101"/>
        <Button x:Name="LoginButton" Content="Login/Register" HorizontalAlignment="Left" Margin="195,235,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click"/>
        <PasswordBox x:Name="PasswordLoginTextBox" HorizontalAlignment="Left" Margin="165,212,0,0" VerticalAlignment="Top" Width="120" Password="Password"/>
        <Label x:Name="WrongInput" Content="" HorizontalAlignment="Left" Margin="195,270,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
