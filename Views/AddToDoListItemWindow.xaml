<Window x:Class="ToDoApp.Views.AddToDoListItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoApp.Views"
        mc:Ignorable="d"
        Title="AddToDoListItemWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="itemName" HorizontalAlignment="Left" Height="23" Margin="311,102,0,0" TextWrapping="Wrap" Text="ItemName" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="itemDesc" HorizontalAlignment="Left" Height="23" Margin="311,130,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="itemStatus" HorizontalAlignment="Left" Height="23" Margin="311,158,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="listConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="386,215,0,0" VerticalAlignment="Top" Width="75" Click="listConfirm_Click"/>
        <DatePicker x:Name="itemDeadline" HorizontalAlignment="Left" Margin="359,186,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
